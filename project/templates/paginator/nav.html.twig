<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        {% if currentPage > 1 %}
            <li class="page-item">
                <a class="page-link" href="{{ path('app_admin', { 'page': currentPage - 1 }) }}" aria-label="Précédent">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        {% endif %}

        {% for i in 1..currentPage %}
            <li class="page-item {{ currentPage == i ? 'active' : '' }}">
                <a class="page-link" href="{{ path('app_admin', { 'page': i }) }}">{{ i }}</a>
            </li>
        {% endfor %}

        {% if isTruncated %}
            <li class="page-item">
                <a class="page-link" href="{{ path('app_admin', { 'page': currentPage + 1, 'token': nextToken }) }}" aria-label="Suivant">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        {% endif %}
    </ul>
</nav>